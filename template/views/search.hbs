{{>header}}
<div class="row" style="margin-top: 3rem;">
    <div class="col-xs-12 col-lg-10 col-xl-8">
        <div class="row" style="margin-top: 3rem;">
            <div class="col-xs-12 col-lg-9">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label for="websiteName" class="col-xs-4 control-label">Website Name</label>
                        <div class="col-xs-8">
                            <input type="text" required class="form-control mb-2" name="websiteName" id="websiteName" placeholder="Website e.g Google" style="margin-bottom: 5px;">
                            <small id="websiteNameHelp" class="form-text text-muted">Note: Your password will only visible for 5 seconds, be quick!</small>
                        </div>
                    </div>
                    <div class="form-group" style="margin-top: 3rem;">
                        <div class="col-xs-offset-2 col-xs-10">
                            <button type="submit" class="btn btn-primary">Search your password</button>
                        </div>
                    </div>
                </form>
            </div>

            <div class="col-xs-12 col-lg-3">
                <div style="margin-left: 3rem;">
                    {{>action1}}
                    {{>action4}}
                    {{>action3}}
                </div>
            </div>
        </div>
    </div>
</div>        
{{>footer}}